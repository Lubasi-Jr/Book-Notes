<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <!-- ALLTHE LINKS NEEDED, BOOSTRAP , CSS AND FONTS -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="styles.css" />

    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Raleway:ital,wght@0,100..900;1,100..900&display=swap"
      rel="stylesheet"
    />

    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=EB+Garamond:ital,wght@0,400..800;1,400..800&display=swap"
      rel="stylesheet"
    />
    <title>Bookmark Chronicles</title>
  </head>
  <body>
    <!--  EJS partial -->
    <%- include("./header.ejs") %>

    <!-- Each post to be contained within this Bootsrap container  -->

    <% books.forEach(book => { %>
    <div class="container col-xxl-8 px-4 py-5">
      <div class="row flex-lg-row-reverse align-items-center g-5 py-5">
        <div class="col-10 col-sm-8 col-lg-6">
          <img
            src="<%= book.image_url %>"
            class="d-block mx-lg-auto img-fluid"
            alt="<%= book.title %>"
            width="75%"
            height="75%"
          />
        </div>
        <div class="col-lg-6">
          <h2 class="raleway"><%= book.title %></h2>
          <div>
            <p class="sorts">Date: <%= book.date_read %></p>
            <p class="sorts">Rating: <%= book.rating %></p>
          </div>
          <p class="lead eb-garamond"><%= book.details %></p>
          <!--<a href="#" class="more">Your notes ></a> -->
          <!-- Update href as needed -->
          <div class="d-grid gap-2 d-md-flex justify-content-md-start">
            <form action="/edit" method="post">
              <button
                type="submit"
                name="isbn"
                value="<%= book.isbn %>"
                class="btn btn-outline-secondary pencil btn-lg px-4"
              >
                <img
                  src="pencil.svg"
                  alt="Pencil for editing"
                  class="svg-icon"
                />
              </button>
            </form>
            <form action="/delete" method="post">
              <button
                type="submit"
                name="isbn"
                value="<%= book.isbn %>"
                class="btn btn-secondary no-border trash btn-lg px-4"
              >
                <img
                  src="trash.svg"
                  alt="Trash for deleting"
                  class="svg-icon"
                />
              </button>
            </form>
          </div>
        </div>
      </div>
    </div>
    <% }); %>

    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
